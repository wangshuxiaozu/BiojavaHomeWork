class Dog{
	private int size;
	private String name;
	void show() {
		System.out.println("name:"+name);
		System.out.println("size:"+size);
	}
	void play() {
		System.out.println("the name is "+name+"'s dog turn around!!");
	}
	void bark(int num) {
		int i;
		for(i=0;i<num;i++) {
			System.out.print("汪！！");
		}
	}
}
public class DogGame {
       public static void main(String[] args) {
    	   System.out.println("I'm role!!!");
    	   int size=27;
    	   String name="Fido";
    	   Dog myDog=new Dog(name,size);
       }
}
